@using refactorme.utils
@model refactorme.ViewModels.CalculateWilksModel
@{
    ViewData["Title"] = "Home Page";    
}

<div class="row">
    <h3>Calculate Wilks Points in KG</h3>
    <div class="col-md-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Calculate Wilks Points</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("CalculatePoints", "Calculate", null, FormMethod.Post, true, new { @class = "form-horizontal", id = "wilksPointForm" }))
                {
                    <div class="form-group">
                        <label class="col-md-3 control-label">Gender</label>
                        <div class="col-md-9">
                            <select asp-for="Gender" asp-items="Html.GetEnumSelectList(typeof(Enums.Gender))" class="form-control"></select>
                        </div>
                    </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Bodyweight KG</label>
                            <div class="col-md-9">
                                <input asp-for="BodyWeight" type="number" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Lifted Weight KG</label>
                            <div class="col-md-9">
                                <input asp-for="LiftedWeight" type="number" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Wilks Points</label>
                            <div class="col-md-9">
                                <p class="form-control-static red" id="wPoints"></p>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <a id="submitBtn" class="btn btn-primary pull-right">Calculate</a>
                            </div>
                        </div>
                }
                <div class="row">
                    <div class="col-md-12" id="error">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">History</h3>
            </div>
            <div class="panel-body">
                <ul id="historyList" class="list-unstyled">

                </ul>
            </div>
        </div>
    </div>
</div>
<div ></div>
